<% if @pictures.any? %>
  <% @pictures.each do |picture| %>
    <%= picture.name %><br>
    <%= link_to 'view ' + picture.name, picture_path(picture) %><br>
    <%= link_to "delete #{picture.name}", picture_path(picture), method: :delete %><br>
    <%= image_tag picture.avatar.url(:medium) %><br><br>
  <% end %>
<% else %>
    No pictures yet
<% end %>

<a href='/pictures/new'>Add a picture</a>
